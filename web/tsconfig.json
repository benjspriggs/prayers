{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "strictNullChecks": true,
    "outDir": "./out/js",
    "rootDir": "./src",
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "reactNamespace": "render",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  "include": ["src/**/*", "!src/**/*.spec.*"]
}
